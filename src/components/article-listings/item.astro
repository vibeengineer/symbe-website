---
import type { ArticleStoryblok } from "../../../storyblok/types";
import type { StoryblokStory } from "@/services/storyblok/schemas";
import { parseAsset } from "@/services/storyblok/utils/parse-asset";
import type { Prettify } from "@/types";
import { storyblokEditable, type SbBlokData } from "@storyblok/astro";
type Props = {
  story: Prettify<StoryblokStory<ArticleStoryblok>>;
};

const {
  story: {
    content: { blurb, thumbnail, title },
  },
} = Astro.props;
---

<div {...storyblokEditable(Astro.props.story.content as SbBlokData)}>
  <img src={parseAsset(thumbnail, "src")} alt={parseAsset(thumbnail, "alt")} />
  <h2>{title}</h2>
  <p>{blurb}</p>
</div>
