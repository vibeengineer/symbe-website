---
import type { NavigationStoryblok } from "@storyblok/types";
import { storyblokEditable, type SbBlokData } from "@storyblok/astro";
import type { Prettify } from "@/types";
import { cn } from "@/utils/cn";
import Logo from "./logo.astro";
import NavLinks from "./nav-links.astro";
import RightLinks from "./right-links.astro";

interface Props {
  className?: string;
  blok: Prettify<NavigationStoryblok>;
  theme?: "transparent" | "white";
}

const { blok, className, theme = "transparent" } = Astro.props as Props;
const { logo, centreLinks, rightLinks } = blok;
---

<nav
  data-nav="desktop"
  data-theme={theme}
  class={cn(
    "hidden md:flex relative items-center justify-between p-4 md:p-6",
    theme === "transparent"
      ? "bg-transparent text-gray-900"
      : "bg-white/90 text-gray-900",
    className,
  )}
  {...storyblokEditable(blok as SbBlokData)}
>
  <Logo logo={logo} />
  {centreLinks && <NavLinks links={centreLinks} theme={theme} />}
  {rightLinks && <RightLinks links={rightLinks} theme={theme} />}
</nav>
