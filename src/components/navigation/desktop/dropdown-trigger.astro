---
import { cn } from "@/utils/cn";
import { ChevronDown } from "@lucide/astro";
import Label from "@/components/ui/label.astro";
interface Props {
  dropdownTitle?: string;
  theme?: "transparent" | "white";
}

const { dropdownTitle, theme = "transparent" }: Props = Astro.props;
---

<button
  data-trigger
  class={cn(
    "relative rounded-full px-4 py-2 text-[0.9375rem]",
    "border-none bg-transparent",
    "hover:bg-gray-200/10",
    "cursor-pointer",
    "flex items-center gap-1",
    "whitespace-nowrap",
  )}
  aria-expanded="false"
  aria-haspopup="true"
>
  <Label size="m" weight="medium" as="span">{dropdownTitle}</Label>
  <ChevronDown
    data-chevron
    class="h-4 w-4 transition-transform duration-200 ease-in-out"
  />
</button>
