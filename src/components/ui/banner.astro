---
import { cn } from "@/utils/cn";

type Props = {
  showCloseButton?: boolean;
  class?: string;
};

const { showCloseButton = false, class: className } = Astro.props;
---

<div
  class={cn(
    "flex items-center justify-center gap-x-6 px-6 py-2.5 sm:px-3.5 bg-white text-text-900",
    className,
  )}
>
  <div class="flex items-center text-sm/6">
    <slot />
  </div>
  {
    showCloseButton && (
      <div class="flex flex-1 justify-end">
        <button type="button" class="-m-3 p-3 focus-visible:-outline-offset-4">
          <span class="sr-only">Dismiss</span>
          <svg
            class="size-5 text-white"
            viewBox="0 0 20 20"
            fill="currentColor"
            aria-hidden="true"
          >
            <path d="M6.28 5.22a.75.75 0 0 0-1.06 1.06L8.94 10l-3.72 3.72a.75.75 0 1 0 1.06 1.06L10 11.06l3.72 3.72a.75.75 0 1 0 1.06-1.06L11.06 10l3.72-3.72a.75.75 0 0 0-1.06-1.06L10 8.94 6.28 5.22Z" />
          </svg>
        </button>
      </div>
    )
  }
</div>
