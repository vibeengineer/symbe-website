---
import type { BentoGridStoryblok } from "../../../storyblok/types";
import type { Prettify } from "../../types";
import BentoGridItem from "./item.astro";

type Props = {
  blok: Prettify<BentoGridStoryblok>;
};

const {
  blok: { title, items },
} = Astro.props;
---

<div>
  <h2>{title}</h2>
  <div>
    {items.map((item) => <BentoGridItem blok={item} />)}
  </div>
</div>
