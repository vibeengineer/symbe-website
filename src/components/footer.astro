---
import type { FooterStoryblok } from "../../storyblok/types";

type Props = {
  blok: FooterStoryblok;
};
const { blok } = Astro.props;
---

<footer
  class="grid grid-cols-1 gap-4 bg-gray-100 p-8 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4"
>
  {
    blok.linkColumns?.map((column) => (
      <div class="flex flex-col gap-2">
        {column.links?.map((link) => {
          const url = link.link?.cached_url || link.link?.url;
          return (
            <a href={url} class="text-gray-700 hover:underline">
              {link.linkText}
            </a>
          );
        })}
      </div>
    ))
  }
</footer>
