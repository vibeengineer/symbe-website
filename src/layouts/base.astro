---
import { SEO, type SEOProps } from "astro-seo";
import { Font } from "astro:assets";
const {
  env: { SITE_NAME, BASE_URL },
} = Astro.locals.runtime;
import "../styles/global.css";
import { getSeoDefaults } from "../services/storyblok/get-seo-defaults";

type Props = {
  title?: string;
  description?: string;
  openGraphTitle?: string;
  openGraphImage?: string;
  noIndex?: boolean;
};

const seoDefaults = await getSeoDefaults();

const { title, description, openGraphTitle, openGraphImage, noIndex } =
  Astro.props;

function getOgImage() {
  if (openGraphImage) return openGraphImage;
  if (seoDefaults.openGraphImage?.filename)
    return seoDefaults.openGraphImage.filename;
  return `${BASE_URL}/og.png`;
}

function getOgTitle() {
  if (openGraphTitle) return openGraphTitle;
  if (seoDefaults.openGraphTitle) return seoDefaults.title;
  if (title) return title;
  return seoDefaults.title;
}

function getNoIndex() {
  if (typeof noIndex === "boolean") return noIndex;
  if (typeof seoDefaults.noIndex === "boolean") return seoDefaults.noIndex;
  return false;
}

const seoProps: SEOProps = {
  noindex: getNoIndex(),
  title: title ? title : seoDefaults.title,
  description: description ? description : seoDefaults.description,
  openGraph: {
    basic: {
      title: getOgTitle(),
      image: getOgImage(),
      type: "website",
    },
  },
  ...(seoDefaults.twitter && {
    twitter: {
      creator: seoDefaults.twitter,
    },
  }),
};
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <Font cssVariable="--font-dm-sans" preload />
    <SEO
      {...seoProps}
      extend={{
        link: [
          {
            rel: "icon",
            type: "image/png",
            href: "/favicon/favicon-96x96.png",
            sizes: "96x96",
          },
          { rel: "icon", type: "image/svg+xml", href: "/favicon/favicon.svg" },
          { rel: "shortcut icon", href: "/favicon/favicon.ico" },
          {
            rel: "apple-touch-icon",
            sizes: "180x180",
            href: "/favicon/apple-touch-icon.png",
          },
          { rel: "manifest", href: "/favicon/site.webmanifest" },
        ],
        meta: [
          { name: "apple-mobile-web-app-title", content: SITE_NAME },
          { property: "og:site_name", content: SITE_NAME },
          { name: "theme-color", content: "#000000" },
        ],
      }}
    />
  </head>
  <body>
    <slot />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    font-family: var(--font-dm-sans);
  }
</style>
