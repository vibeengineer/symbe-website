---
import { SEO } from "astro-seo";
import type { SEOProps } from "astro-seo";
import { Font } from "astro:assets";
const { env } = Astro.locals.runtime;
import "../styles/global.css";

type Props = {
  title?: string;
  description: string;
  openGraph?: SEOProps["openGraph"];
};

const { title, description, openGraph } = Astro.props;
const siteUrl = env.BASE_URL;
const siteName = title ?? env.SITE_NAME;
const ogImage = openGraph?.basic?.image ?? `${siteUrl}/og.png`;
const siteDescription = description ?? env.SITE_DESCRIPTION;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <Font cssVariable="--font-dm-sans" preload />
    <SEO
      title={title ? `${title} | ${siteName}` : siteName}
      description={siteDescription}
      openGraph={openGraph ?? {
        basic: {
          title: siteName,
          type: "website",
          image: ogImage,
        },
      }}
      extend={{
        link: [
          {
            rel: "icon",
            type: "image/png",
            href: "/favicon/favicon-96x96.png",
            sizes: "96x96",
          },
          { rel: "icon", type: "image/svg+xml", href: "/favicon/favicon.svg" },
          { rel: "shortcut icon", href: "/favicon/favicon.ico" },
          {
            rel: "apple-touch-icon",
            sizes: "180x180",
            href: "/favicon/apple-touch-icon.png",
          },
          { rel: "manifest", href: "/favicon/site.webmanifest" },
        ],
        meta: [
          { name: "apple-mobile-web-app-title", content: siteName },
          { property: "og:site_name", content: siteName },
          { name: "theme-color", content: "#000000" },
        ],
      }}
    />
  </head>
  <body>
    <slot />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    font-family: var(--font-dm-sans);
  }
</style>
