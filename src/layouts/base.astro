---
import { SEO } from "astro-seo";
import { Font } from "astro:assets";
const {
  env: { SITE_NAME, BASE_URL },
} = Astro.locals.runtime;
import "../styles/global.css";
import { getSeoDefaults } from "../services/storyblok/get-seo-defaults";

type Props = {
  title?: string;
  description?: string;
  openGraphTitle?: string;
  openGraphImage?: string;
  noIndex?: boolean;
};

const seoDefaults = await getSeoDefaults();

const { title, description, openGraphTitle, openGraphImage, noIndex } =
  Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <Font cssVariable="--font-dm-sans" preload />
    <SEO
      {...seoDefaults}
      noindex={noIndex}
      title={title ? `${title} | ${SITE_NAME}` : SITE_NAME}
      description={description
        ? description
        : seoDefaults.description
          ? seoDefaults.description
          : "Set website description within Storyblok"}
      openGraph={{
        basic: {
          title: openGraphTitle
            ? openGraphTitle
            : seoDefaults.openGraph?.basic.title
              ? seoDefaults.openGraph?.basic.title
              : "Title",
          type: "website",
          image: openGraphImage
            ? openGraphImage
            : seoDefaults.openGraph?.image?.url &&
                typeof seoDefaults.openGraph?.image?.url === "string"
              ? seoDefaults.openGraph?.image.url
              : `${BASE_URL}/og.png`,
        },
      }}
      extend={{
        link: [
          {
            rel: "icon",
            type: "image/png",
            href: "/favicon/favicon-96x96.png",
            sizes: "96x96",
          },
          { rel: "icon", type: "image/svg+xml", href: "/favicon/favicon.svg" },
          { rel: "shortcut icon", href: "/favicon/favicon.ico" },
          {
            rel: "apple-touch-icon",
            sizes: "180x180",
            href: "/favicon/apple-touch-icon.png",
          },
          { rel: "manifest", href: "/favicon/site.webmanifest" },
        ],
        meta: [
          { name: "apple-mobile-web-app-title", content: SITE_NAME },
          { property: "og:site_name", content: SITE_NAME },
          { name: "theme-color", content: "#000000" },
        ],
      }}
    />
  </head>
  <body>
    <slot />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    font-family: var(--font-dm-sans);
  }
</style>
